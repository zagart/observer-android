<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Main">

    <TextView
        android:id="@+id/main_menu_title"
        style="@style/Main.Title"
        android:text="@string/app_name"/>

    <LinearLayout
        android:id="@+id/main_menu"
        style="@style/Main.Menu">


        <Button
            android:id="@+id/btn_my_account"
            style="@style/Main.Button"
            android:onClick="onMyAccountClick"
            android:text="@string/my_account"/>

        <Button
            android:id="@+id/main_menu_btn_log_in"
            style="@style/Main.Button"
            android:onClick="onLoginClick"
            android:text="@string/sign_in"/>

        <Button
            android:id="@+id/main_menu_btn_settings"
            style="@style/Main.Button"
            android:onClick="onSettingsClick"
            android:text="@string/settings"/>

        <Button
            android:id="@+id/main_menu_btn_info"
            style="@style/Main.Button"
            android:onClick="onInfoClick"
            android:text="@string/main_menu_btn_info"/>

        <Button
            android:id="@+id/main_menu_btn_exit"
            style="@style/Main.Button"
            android:onClick="onExitClick"
            android:text="@string/exit"/>
    </LinearLayout>
</FrameLayout>
