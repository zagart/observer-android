<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ObserverDefault" parent="Theme.AppCompat"></style>

    <style name="Main">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Main.Menu">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Main.Button">
        <item name="android:textSize">@dimen/default_button_text_size</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
    </style>

    <style name="Main.Title">
        <!--<item name="android:background">@drawable/steel</item>-->
        <!--<item name="android:scaleType">centerCrop</item>-->
        <item name="android:layout_width">@dimen/main_title_width</item>
        <item name="android:layout_height">@dimen/main_title_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/main_title_margin_top</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/main_title_text_size</item>
    </style>

    <style name="LoginLayout">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RegistrationLayout" parent="LoginLayout"/>

    <style name="RegistrationLayout.Title" parent="LoginLayout.Title">
        <item name="android:text">Registration</item>
    </style>

    <style name="RegistrationLayout.Login" parent="LoginLayout.Login"/>

    <style name="RegistrationLayout.Password" parent="LoginLayout.Password"/>

    <style name="RegistrationLayout.Title.Login" parent="LoginLayout.Title.Login"/>

    <style name="RegistrationLayout.Title.Password" parent="LoginLayout.Title.Password"/>

    <style name="RegistrationLayout.Form" parent="LoginLayout.Form"/>

    <style name="RegistrationLayout.Button" parent="LoginLayout.Button"/>

    <style name="LoginLayout.Title" parent="Main.Title">
        <item name="android:text">Authentication</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/login_title_text_size</item>
    </style>

    <style name="LoginLayout.Login">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="LoginLayout.Password" parent="LoginLayout.Login">
        <item name="android:inputType">textWebPassword</item>
    </style>

    <style name="LoginLayout.Title.Login">
        <item name="android:text">@string/login</item>
        <item name="android:textSize">@dimen/login_form_title_text_size</item>
        <item name="android:layout_margin">@dimen/zero_dp</item>
        <item name="android:padding">@dimen/zero_dp</item>
    </style>

    <style name="LoginLayout.Title.Password" parent="LoginLayout.Title.Login">
        <item name="android:text">@string/password</item>
    </style>

    <style name="LoginLayout.Form">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/login_form_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/login_form_margin_bottom</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginLayout.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/zero_dp</item>
        <item name="android:padding">@dimen/zero_dp</item>
    </style>
    <!-- PercentRelativeLayout -->
    <style name="LoginLayout.Footer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="StandardTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/my_activity_user_status_margin_top</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/standard_label_height</item>
        <item name="android:minWidth">@dimen/standard_label_width</item>
    </style>

    <style name="RecyclerViewTableCell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/default_button_text_size</item>
    </style>

    <style name="ReloadButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
