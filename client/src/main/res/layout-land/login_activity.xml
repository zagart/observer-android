<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LoginLayout">

    <TextView
        android:id="@+id/login_title"
        style="@style/LoginLayout.Title"/>

    <LinearLayout
        android:id="@+id/login_form"
        style="@style/LoginLayout.Form"
        android:layout_margin="@dimen/zero_dp"
        android:padding="@dimen/zero_dp"
        app:layout_marginBottomPercent="@fraction/land_login_form_margin_bottom">

        <TextView
            android:id="@+id/login_sign_in_title"
            style="@style/LoginLayout.Title.Login"/>

        <EditText
            android:id="@+id/login_login"
            style="@style/LoginLayout.Login"
            android:layout_marginBottom="@dimen/default_margin"/>

        <TextView
            android:id="@+id/login_password_title"
            style="@style/LoginLayout.Title.Password"/>

        <EditText
            android:id="@+id/login_password"
            style="@style/LoginLayout.Password"/>
    </LinearLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/login_footer"
        style="@style/LoginLayout.Footer">

        <Button
            android:id="@+id/btn_guest"
            style="@style/LoginLayout.Button"
            android:onClick="onGuestClick"
            android:text="@string/as_guest"
            app:layout_heightPercent="@fraction/land_login_button_height"
            app:layout_widthPercent="@fraction/land_login_button_width"/>

        <Button
            android:id="@+id/btn_sign_in"
            style="@style/RegistrationLayout.Button"
            android:layout_centerInParent="true"
            android:onClick="onSignInClick"
            android:text="@string/sign_in"
            app:layout_heightPercent="@fraction/land_login_sign_in_button_height"
            app:layout_widthPercent="@fraction/land_login_sign_in_button_width"/>

        <Button
            android:id="@+id/btn_sign_up"
            style="@style/LoginLayout.Button"
            android:onClick="onSignUpClick"
            android:text="@string/sign_up"
            app:layout_heightPercent="@fraction/land_login_button_height"
            app:layout_marginStartPercent="@fraction/land_login_btn_login_margin_left"
            app:layout_widthPercent="@fraction/land_login_button_width"/>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentFrameLayout>