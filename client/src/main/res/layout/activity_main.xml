<?xml version="1.0" encoding="utf-8"?>
<FrameLayout style="@style/Main"
             xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/main_menu_title"
        style="@style/Main.Title"
        android:text="@string/app_name"/>

    <LinearLayout
        android:id="@+id/layout_main_menu"
        style="@style/Main.Menu">

        <Button
            android:id="@+id/menu_item_my_account"
            style="@style/Main.Button"
            android:onClick="onMyAccountClick"
            android:text="@string/my_account"/>

        <Button
            android:id="@+id/menu_item_data"
            style="@style/Main.Button"
            android:onClick="onDataClick"
            android:text="@string/data"
            android:visibility="gone"/>

        <Button
            android:id="@+id/menu_item_modules"
            style="@style/Main.Button"
            android:onClick="onModulesClick"
            android:text="@string/modules"
            android:visibility="gone"/>

        <Button
            android:id="@+id/menu_item_stands"
            style="@style/Main.Button"
            android:onClick="onStandsClick"
            android:text="@string/stands"
            android:visibility="gone"/>
    </LinearLayout>
</FrameLayout>
