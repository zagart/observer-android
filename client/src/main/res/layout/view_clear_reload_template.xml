<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/clear_reload_template"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="end"
              android:orientation="horizontal">

    <ImageButton
        android:id="@+id/top_panel_clear"
        style="@style/PanelButton"
        android:contentDescription="@string/button_for_clean_up"
        app:srcCompat="@drawable/ic_clear_black_24dp"/>

    <ImageButton
        android:id="@+id/top_panel_reload"
        style="@style/PanelButton"
        android:contentDescription="@string/button_for_reload"
        app:srcCompat="@drawable/ic_reload_black_24dp"/>
</LinearLayout>